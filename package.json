{
  "name": "eco-sim",
  "version": "1.0.0",
  "author": "Matthias Eichner",
  "main": "index.js",
  "engines": {
    "node": ">=10.0"
  },
  "scripts": {
    "serve": "node webserver.js",
    "start": "run-s dev",
    "dev": "run-s dev:assets dev:js webpack-server",
    "build": "run-s prebuild build:assets build:js",
    "prebuild": "run-s clean lint",
    "clean": "rimraf dist/prod",
    "lint": "eslint src/js/",
    "webpack-server": "webpack-dev-server --env.NODE_ENV=dev --progress --color --open --hot",
    "webpack-watch": "webpack --env.NODE_ENV=dev --progress --color --watch --hot",
    "dev:assets:": "copyfiles -a -u 2 'src/assets/**/*.*' 'dist/dev/'",
    "dev:js": "webpack --env.NODE_ENV=dev",
    "build:assets": "copyfiles -a -u 2 'src/assets/**/*.*' 'dist/prod/'",
    "build:js": "webpack --env.NODE_ENV=prod --progress --color --verbose"
  },
  "dependencies": {
    "easystarjs": "^0.4.4",
    "express": "^4.17.1",
    "three": "^0.124.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "autoprefixer": "^9.8.4",
    "babel-loader": "^8.1.0",
    "copyfiles": "^2.3.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
